<tool id="eBCSgen_generate_transition_system" name="eBCSgen - TS generator" version="@TOOL_VERSION@+galaxy0">
    <description>- generate transition system of the given model</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="creator"/>
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">eBCSgen</requirement>
    </requirements>

    <command>python3 ${__tool_directory__}/ebcsgen_generate_ts.py
        --model '$model'
        --output '$output'
        #if $bound != "":
        --bound '$bound'
        #end if
        --direct '$method.network_free_choice'
        #if $method.adv.transition_file != "":
        --transition_file '$method.adv.transition_file'
        #end if
        #if $method.adv.max_time != "":
        --max_time '$method.adv.max_time'
        #end if
        #if $method.adv.max_size != "":
        --max_size '$method.adv.max_size'
        #end if
    </command>

    <inputs>
        <param format="bcsl.model" name="model" type="data" label="Model file" help="Provide a .bcs file"/>
        <param name="bound" min="0" type="integer" value="" label="Bound [optional]" optional="true"/>
        <conditional name="method">
            <param name="network_free_choice" type="select" label="Choose network-free approach:">
                <option value="False" selected="true">Indirect</option>
                <option value="True">Direct</option>
            </param>
            <when value="False">
                <section name="adv" title="Advanced Options" expanded="false">
                    <expand macro="generate_ts_advanced"/>
                    <param format="bcsl.ts" name="transition_file" type="data"
                           label="Precomputed TS file [optional]" optional="true"/>
                </section>
            </when>
            <when value="True">
                <section name="adv" title="Advanced Options" expanded="false">
                    <expand macro="generate_ts_advanced"/>
                </section>
            </when>
        </conditional>
    </inputs>

    <outputs>
        <data format="bcsl.ts" name="output"/>
    </outputs>

    <tests>
        <test>
            <param name="model" value="simple.bcsl.model" ftype="bcsl.model"/>
            <output name="output" ftype="bcsl.ts">
                <assert_contents>
                    <has_text text="nodes"/>
                    <has_text text="edges"/>
                    <has_text text="ordering"/>
                    <has_text text="initial"/>
                    <has_n_lines n="98" />
                </assert_contents>
            </output>
        </test>
    </tests>
</tool>
